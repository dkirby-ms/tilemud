{
  "name": "tilemud-web-client",
  "private": true,
  "version": "0.1.0",
  "description": "TileMUD web client for persistent character creation",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "npm run build -- --mode analyze && npm run bundle:report",
    "bundle:report": "node scripts/bundle-report.js",
    "bundle:check": "node scripts/bundle-check.js",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest --run",
    "test:contract": "vitest --run tests/contract",
    "test:integration": "vitest --run tests/integration",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@azure/msal-browser": "^4.24.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "colyseus.js": "^0.16.4",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.2",
    "vitest": "^3.2.4",
    "zod": "^3.23.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vite-bundle-analyzer": "^1.2.3"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
