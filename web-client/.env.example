# TileMUD Web Client Environment Variables

# Copy this file to .env.local and fill in your values

# Azure AD (Entra ID) External Identities configuration
VITE_AZURE_CLIENT_ID="your-client-id-here"
VITE_AZURE_AUTHORITY="https://your-tenant.ciamlogin.com/your-tenant.onmicrosoft.com"
VITE_AZURE_REDIRECT_URI="http://localhost:5173"

# API Configuration
VITE_API_BASE_URL="http://localhost:8080/api"

# Development Features
VITE_ENABLE_DIAGNOSTICS="true"

# WebSocket URL for real-time connections (for future use)
VITE_WS_URL="wss://api.tilemud.example.com/realtime"